<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/space_default"
    android:paddingRight="@dimen/space_default"
    android:orientation="vertical">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/person_name_edit_text"

        android:paddingTop="@dimen/space_default"
        android:paddingBottom="@dimen/space_default" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/person_description_edit_text"
        android:paddingTop="@dimen/space_default"
        android:paddingBottom="@dimen/space_default"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_person_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:paddingRight="@dimen/space_xl"
        android:paddingLeft="@dimen/space_xl"
        android:layout_height="wrap_content"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_gravity="center"
        android:text="@string/done_button_text"/>

</LinearLayout>
